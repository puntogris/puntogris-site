---
import Links from "./Links.astro";
---

<div class="mt-3 border-b border-gray-700 pb-4">
  <div class="flex justify-between flex-wrap gap-2 items-end sm:px-0 px-4">
    <div>
      <h1 class="font-bold text-gray-300 text-3xl">
        <span class="text-2xl">Hello,</span>
        <br />
        I'm
        <mark class="half_background text-blue-400">Joaquin</mark>
      </h1>

      <div class="mt-4">
        <span class="text-gray-400">Developer / Blogger / Person</span>
      </div>
    </div>
    <div>
      <Links />
    </div>
  </div>

  <div class="mt-4 sm:px-0 px-4">
    <a href="https://blog.puntogris.com/" target="_blank">
      <button
        type="button"
        class="inline-block px-6 py-2 button_background text-gray-200 font-bold text-sm leading-tight rounded-md hover:bg-white hover:bg-opacity-5 focus:outline-none focus:ring-0 transition duration-150 ease-in-out"
        >Blog</button
      >
    </a>
    <a href="https://github.com/puntogris" target="_blank">
      <button
        type="button"
        class="inline-block ml-1 px-6 py-2 button_background text-gray-200 font-bold text-sm leading-tight rounded-md hover:bg-white hover:bg-opacity-5 focus:outline-none focus:ring-0 transition duration-150 ease-in-out"
        >Github</button
      >
    </a>
    <a
      href="https://play.google.com/store/apps/dev?id=9215074992728346327"
      target="_blank"
    >
      <button
        type="button"
        class="inline-block ml-1 px-6 py-2 button_background text-gray-200 font-bold text-sm leading-tight rounded-md hover:bg-white hover:bg-opacity-5 focus:outline-none focus:ring-0 transition duration-150 ease-in-out"
        >Play Store</button
      >
    </a>
  </div>
</div>

<style>
  .half_background {
    background: linear-gradient(transparent 75%, rgba(56, 139, 253, 0.4) 0px);
  }
  .button_background {
    border: 1px solid rgba(240, 246, 252, 0.1);
    background-color: rgb(33 38 45);
  }
  .flex_container {
    -moz-box-pack: justify;
  }
</style>
