---
import GithubBorderIcon from "./icons/GithubBorderIcon.svelte";
import TwitterBorderIcon from "./icons/TwitterBorderIcon.svelte";
import TelegramBorderIcon from "./icons/TelegramBorderIcon.svelte";
---

<section class="text-gray-100">
  <h1 class="text-2xl font-bold">Contact Me</h1>
  <ul class="mt-4 text-sm font-bold text-blue-400">
    <li class="flex items-center">
      <a
        href="https://github.com/puntogris"
        target="_blank"
        rel="me noopener noreferrer"
        class="block h-full w-full px-4 py-1.5 hover:rounded-md hover:bg-gray-600 hover:bg-opacity-40"
      >
        <GithubBorderIcon size={20} />
        <span class="ml-2">GitHub</span></a
      >
    </li>
    <li class="flex items-center">
      <a
        href="https://twitter.com/joacojk"
        target="_blank"
        rel="me noopener noreferrer"
        class="block h-full w-full px-4 py-1.5 hover:rounded-md hover:bg-gray-600 hover:bg-opacity-40"
      >
        <TwitterBorderIcon size={20} />
        <span class="ml-2">Twitter</span></a
      >
    </li>
    <li class="flex items-center">
      <a
        href="https://t.me/joacojk"
        target="_blank"
        rel="me noopener noreferrer"
        class="block h-full w-full px-4 py-1.5 hover:rounded-md hover:bg-gray-600 hover:bg-opacity-40"
      >
        <TelegramBorderIcon size={20} />
        <span class="ml-2">Telegram</span></a
      >
    </li>
  </ul>
</section>
