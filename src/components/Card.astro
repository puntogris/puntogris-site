---
const { project } = Astro.props;
---

<div class="py-2 px-4 border rounded-md button_background">
  <div>
    <a
      href={project.url}
      target="_blank"
      class="text-blue-400 font-bold hover:underline">{project.name}</a
    >
  </div>
  <p class="text-gray-400 text-sm mt-2">{project.description}</p>
</div>

<style>
  .button_background {
    border: 1px solid rgb(48, 54, 61);
  }
</style>
